      name: Camera Settings
      input:
        camera_entities:
          name: Camera Entities
          selector:
            entity:
              multiple: true
              domain: camera
        motion_sensors:
          name: Motion Sensors
          default: []
          selector:
            entity:
              multiple: true
              domain: binary_sensor
        trigger_state:
          name: Camera Trigger State
          default: "recording"
          selector:
            text: {}
        cooldown_minutes:
          name: Automation Cooldown (Minutes)
          default: 5
          selector:
            number:
              min: 0
              max: 60
              step: 1
        frigate_base_url:
          name: Frigate Base URL
          default: "http://frigate.local:5000"
