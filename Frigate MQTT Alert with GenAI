blueprint:
  name: Frigate Basic Notification (Mobile)
  description: >
    Sends a Home Assistant mobile notification with snapshot and clip links
    when Frigate detects selected objects on selected cameras.
  domain: automation
  input:
    frigate_cameras:
      name: Frigate Cameras
      selector:
        entity:
          domain: camera
          integration: frigate
          multiple: true

    frigate_objects:
      name: Objects to Alert
      default: []
      selector:
        select:
          multiple: true
          options:
            - person
            - car
            - dog
            - cat
            - package

    mobile_device:
      name: Mobile Device
      selector:
        text:

variables:
  payload: "{{ trigger.payload_json }}"
  event_type: "{{ payload.type }}"
  event_id: "{{ payload.after.id }}"
  camera: "{{ payload.after.camera }}"
  object: "{{ payload.after.label }}"
  selected_cameras: >
    {{ iif(frigate_cameras is string, [frigate_cameras], frigate_cameras) | map('replace', 'camera.', '') | list }}
  snapshot_url: "http://10.10.10.81:5000/api/events/{{ event_id }}/snapshot.jpg"
  clip_url: "http://10.10.10.81:5000/api/events/{{ event_id }}/clip.mp4"

trigger:
  - platform: mqtt
    topic: frigate/events

condition:
  - condition: template
    value_template: "{{ event_type == 'end' }}"
  - condition: template
    value_template: "{{ camera in selected_cameras }}"
  - condition: template
    value_template: "{{ object in frigate_objects }}"

action:
  - service: notify.mobile_app_{{ mobile_device }}
    data:
      message: >
        ðŸ“¸ {{ object | title }} detected on {{ camera }}
        
        [Snapshot]({{ snapshot_url }})  
        [Clip]({{ clip_url }})
      title: "Frigate Alert"
      data:
        tag: "frigate_{{ event_id }}"
        persistent: true
        ttl: 0
        priority: high

mode: queued
